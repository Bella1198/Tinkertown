
<%-include("../partials/admin/header")%>
        <section class="content-main">
            <div class="row">
                <div class="col-9">
                    <div class="content-header">
                        <h2 class="content-title">Edit Category</h2>
                        
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="card mb-4">
                        
                        <div class="card-body">

                                <form action="/admin/editCategory/<%=cat._id %>" method="post">
                                    <div class="mb-4">
                                        <label for="product_name" class="form-label">Category</label>
                                        <input type="text" name="name" class="form-control" id="product_name" value="<%= cat.name%>">
                                    </div>
                                    <div class="mb-4">
                                        <label class="form-label">Description</label>
                                        <textarea name="description" class="form-control" rows="4"><%= cat.description %></textarea>
                                    </div>
                                    <div>
                                        <button type="submit" class="btn btn-md rounded font-sm hover-up">Update Category</button>
                                    </div>
                                </form>

                        </div>
                    </div>
                </div>
            </div>
        </section>
        <%-include("../partials/admin/footer")%>
